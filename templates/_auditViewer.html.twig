<div class="timeline mt-3">
    {% for dateTimeLOG, eventsInDateTimeLOG in changes %}
        {% if actualDay is not defined or actualDay != dateTimeLOG | date("j M Y") %}
            {% set actualDay = dateTimeLOG | date("j M Y") %}
            <!-- timeline time label -->
            <div class="time-label">
            <span class="bg-green">{{ dateTimeLOG is empty ? "" : dateTimeLOG | date("j M Y") }}</span>
            </div>
            <!-- /.timeline-label -->
        {% endif %}

        {% for userLOG, eventsInUserLOG in eventsInDateTimeLOG %}
        <!-- timeline item -->
        <div>
            <i class="fas fa-cogs bg-grey"></i>
            <div class="timeline-item">
                <span class="time"><i class="fas fa-clock"></i> {{ dateTimeLOG is empty ? "" : dateTimeLOG | date("H:i:s") }}</span>
                <h3 class="timeline-header">{{ eventsInUserLOG[0].UserLOGname }} ({{ eventsInUserLOG[0].UserLOGuser }}) {{ eventsInUserLOG[0].action }}</h3>

                <div class="timeline-body">
                {% for log in eventsInUserLOG %}
                    {{ log.field }}: <span class="text-danger">{{ log.before | raw }}</span> <i class="fas fa-long-arrow-alt-right"></i> {{ log.after | raw }}
                    {% if log != log | last %}<br/>{% endif %}
                {% endfor %}
                </div>
            </div>
        </div>
        <!-- END timeline item -->
        {% endfor %}
    {% endfor %}
    <div>
    <i class="fas fa-clock bg-gray"></i>
    </div>
</div>