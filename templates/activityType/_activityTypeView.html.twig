{{ include('_jsForms.html.twig') }}

<div class="card shadow-sm mt-3">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">
            <i class="fas fa-money-check-dollar mr-2"></i>Activity Type: {{ object.code }}
        </h3>
        <div class="ml-auto">
            {% if is_granted('ROLE_ADMIN') %}
            <a href="#" addressTo="{{ path('app_activityTypesEdit', {id: object.id}) }}" containerTo="nav-detail" class="btn btn-primary toggle-view-edit">
                <i class="fas fa-edit mr-1"></i> Edit
            </a>
            {% endif %}
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="info-box bg-light">
                    <span class="info-box-icon bg-primary"><i class="fas fa-code"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text text-muted">Code</span>
                        <span class="info-box-number">{{ object.code|default("—") }}</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-box bg-light">
                    <span class="info-box-icon bg-success"><i class="fas fa-euro-sign"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text text-muted">Price</span>
                        <span class="info-box-number">{{ object.price ? object.price ~ ' €' : "—" }}</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <div class="info-box bg-light">
                    <span class="info-box-icon bg-info"><i class="fas fa-object-group"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text text-muted">Type</span>
                        <span class="info-box-number">{{ object.type|default("—") }}</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-box bg-light">
                    <span class="info-box-icon bg-warning"><i class="fas fa-tag"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text text-muted">SAP Name</span>
                        <span class="info-box-number">{{ object.SAPname|default("—") }}</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <h5><i class="fas fa-align-left mr-2"></i>Description</h5>
            <div class="p-3 bg-light rounded">
                {% if object.description %}
                <p class="mb-0">{{ object.description }}</p>
                {% else %}
                <p class="text-muted mb-0"><i>No description available</i></p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% if object.networkDevices is not empty or object.networkVirtualSystems is not empty or object.networkInterfaces is not empty %}
<div class="card shadow-sm mt-4">
    <div class="card-header bg-light">
        <h3 class="card-title mb-0">
            <i class="fas fa-link mr-2"></i>Related Resources
        </h3>
    </div>
    <div class="card-body p-0">
        <ul class="nav nav-tabs" id="relationshipTabs" role="tablist">
            {% if object.networkDevices is not empty %}
            <li class="nav-item">
                <a class="nav-link active" id="devices-tab" data-toggle="tab" href="#devices" role="tab" aria-controls="devices" aria-selected="true">
                    <i class="fas fa-server mr-1"></i> Devices <span class="badge badge-pill badge-primary">{{ object.networkDevices|length }}</span>
                </a>
            </li>
            {% endif %}
            {% if object.networkVirtualSystems is not empty %}
            <li class="nav-item">
                <a class="nav-link {% if object.networkDevices is empty %}active{% endif %}" id="systems-tab" data-toggle="tab" href="#systems" role="tab" aria-controls="systems" aria-selected="false">
                    <i class="fas fa-network-wired mr-1"></i> Virtual Systems <span class="badge badge-pill badge-primary">{{ object.networkVirtualSystems|length }}</span>
                </a>
            </li>
            {% endif %}
            {% if object.networkInterfaces is not empty %}
            <li class="nav-item">
                <a class="nav-link {% if object.networkDevices is empty and object.networkVirtualSystems is empty %}active{% endif %}" id="interfaces-tab" data-toggle="tab" href="#interfaces" role="tab" aria-controls="interfaces" aria-selected="false">
                    <i class="fas fa-ethernet mr-1"></i> Interfaces <span class="badge badge-pill badge-primary">{{ object.networkInterfaces|length }}</span>
                </a>
            </li>
            {% endif %}
        </ul>
        
        <div class="tab-content p-3" id="relationshipTabsContent">
            {% if object.networkDevices is not empty %}
            <div class="tab-pane fade show active" id="devices" role="tabpanel" aria-labelledby="devices-tab">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for device in object.networkDevices %}
                            <tr>
                                <td>{{ device.name }}</td>
                                <td>
                                    <a href="{{ path('app_networkDeviceDetail', {id: device.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endif %}
            
            {% if object.networkVirtualSystems is not empty %}
            <div class="tab-pane fade {% if object.networkDevices is empty %}show active{% endif %}" id="systems" role="tabpanel" aria-labelledby="systems-tab">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for system in object.networkVirtualSystems %}
                            <tr>
                                <td>{{ system.name }}</td>
                                <td>
                                    <a href="{{ path('app_networkVirtualSystemsDetail', {id: system.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endif %}
            
            {% if object.networkInterfaces is not empty %}
            <div class="tab-pane fade {% if object.networkDevices is empty and object.networkVirtualSystems is empty %}show active{% endif %}" id="interfaces" role="tabpanel" aria-labelledby="interfaces-tab">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for interface in object.networkInterfaces %}
                            <tr>
                                <td>{{ interface.name }}</td>
                                <td>
                                    <a href="{{ path('app_networkInterfacesDetail', {id: interface.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endif %}

<script>
    $(function () {
        // Activate tooltips
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>