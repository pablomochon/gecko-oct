{% extends 'base.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/dashboard.js') }}?v={{ filemtime( asset('js/dashboard.js') ) }}"></script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-3 col-6">
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>{{ numNetworkDevices }}</h3>

                    <p>Network Devices</p>
                </div>
                <div class="icon">
                    <i class="fa fa-network-wired"></i>
                </div>
                <a href="{{ path('app_network_device') }}" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col-lg-3 col-6">
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>{{ numNetworkVirtualSystems }}</h3>

                    <p>Network Virtual Systems</p>
                </div>
                <div class="icon">
                    <i class="fa fa-network-wired"></i>
                </div>
                <a href="{{ path('app_network_virtual_system') }}" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
{% endblock %}
