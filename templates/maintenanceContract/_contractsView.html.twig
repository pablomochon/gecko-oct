{{ include('_jsForms.html.twig') }}

<div class="card shadow-sm mt-3">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">
            <i class="fas fa-file-contract mr-2"></i>Maintenance Contract: {{ object.name }}
        </h3>
        <div class="ml-auto">
            {% if is_granted('ROLE_ADMIN') %}
            <a href="#" addressTo="{{ path('app_contractsEdit', {id: object.id}) }}" containerTo="nav-detail" class="btn btn-primary toggle-view-edit">
                <i class="fas fa-edit mr-1"></i> Edit
            </a>
            {% endif %}
        </div>
    </div>
	<div class="card-body">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-3">
					<div class="card card-primary card-outline">
						<div class="card-body box-profile">
							<h3 class="profile-username text-center">{{ object.name }}</h3>

							<ul class="list-group list-group-unbordered mb-3">
								<li class="list-group-item">
									<b>START DATE</b>
									<a class="float-right">{{ object.startDate ? object.startDate|date('d-m-Y H:i:s') : 'NO DATA' }}</a>
								</li>
							</ul>
							<ul class="list-group list-group-unbordered mb-3">
								<li class="list-group-item">
									<b>END DATE</b>
									<a class="float-right">{{ object.endDate ? object.endDate|date('d-m-Y H:i:s') : 'NO DATA' }}</a>
								</li>
							</ul>
							<ul class="list-group list-group-unbordered mb-3">
								<li class="list-group-item">
									<b>Manufacturer</b>
									<a class="float-right">{{ object.manufacturer|default('NO DATA') }}</a>
								</li>
							</ul>
							<ul class="list-group list-group-unbordered mb-3">
								<li class="list-group-item">
									<b>Provider</b>
									<a class="float-right">{{ object.provider|default('NO DATA') }}</a>
								</li>
							</ul>
							<ul class="list-group list-group-unbordered mb-3">
								<li class="list-group-item">
									<b>Status</b>
									<a class="float-right">{{ object.status == 1 ? 'true' : 'false'| default('NO DATA') }}</a>
								</li>
							</ul>
							<ul class="list-group list-group-unbordered mb-3">
								<li class="list-group-item">
									<b>Cost</b>
									<a class="float-right">{{ object.cost|default('NO DATA') }}</a>
								</li>
							</ul>
							<ul class="list-group list-group-unbordered mb-3">
								<li class="list-group-item">
									<b>Notes</b>
									<a class="float-right">{{ object.notes|default('NO DATA') }}</a>
								</li>
							</ul>
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.card-body -->
</div>
